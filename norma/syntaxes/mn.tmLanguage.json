{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Norma",

	"foldingStartMarker": "\\{\\s*$",
    "foldingStopMarker": "^\\s*\\}",
	"patterns": [
		{
			"include": "#keywords"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.mn",
				"match": "\\b(if|then|else|goto|do|operation|test)\\b"
			},
			{
				"name": "keyword.other",
				"match": "\\b(zero|cmp|add|sub|inc|dec)\\b"
			},
			{
				"name": "constant.language.mn",
				"match": "\\b(true|false|0)\\b"
			},
			{
				"name": "entity.name.function.mn",
				"match": "[a-zA-Z_]+(?=\\s*\\([a-zA-Z_, ]*\\))"
			},
			{
				"name": "variable.other",
				"match": "\\b[0-9a-zA-Z_]+\\b(?=:)"
			}
		]
		}
	},
	"scopeName": "source.mn"
}